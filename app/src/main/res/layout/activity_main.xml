<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dnsh_dinnu.bitcoinapp.MainActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/logoimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/bit_coin"/>

    <TextView
        android:id="@+id/priceview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logoimage"
        android:layout_alignLeft="@+id/logoimage"
        android:layout_alignRight="@+id/logoimage"
        android:layout_alignStart="@+id/logoimage"
        android:layout_below="@+id/logoimage"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:textColor="#FFFF30"
        android:hint="$$$$.$$"
        android:textColorHint="#FFFF10"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/priceview"
        android:layout_alignStart="@+id/priceview"
        android:layout_below="@+id/priceview"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="Base Currency : "
        android:textColor="#80FFFFFF"/>

    <Spinner
        android:id="@+id/currency_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"/>
</RelativeLayout>
